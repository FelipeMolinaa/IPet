<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activitys.Forms.activityFormularioVacinas">

        <EditText android:id="@+id/TxtBoxNomeDaVacina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Nome da Vacina"
            android:inputType="textCapWords"
            android:importantForAutofill="no"
            tools:targetApi="o"/>

        <Spinner android:id="@+id/SpinnerTipoDeVacina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/BotaoAbrirCalendarioDataDeVacinacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="data da Vacinação"
            android:textSize="20sp" />

        <Button android:id="@+id/BotaoAbrirCalendarioDataDeValidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="data da Validade"
            android:textSize="20sp"
            android:layout_margin="8dp"/>
    </LinearLayout>
</ScrollView>