<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelNomeVacina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/LabelDiasRestantes"
                app:layout_constraintStart_toEndOf="@+id/ImagemItemVacina"
                app:layout_constraintTop_toTopOf="@+id/ImagemItemVacina"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Vacina: " />

            <TextView
                android:id="@+id/LabelNomeVacina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAlignment="viewStart"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/labelNomeVacina"
                app:layout_constraintStart_toEndOf="@+id/labelNomeVacina"
                app:layout_constraintTop_toTopOf="@+id/labelNomeVacina"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Raiva" />

            <TextView
                android:id="@+id/LabelDiasRestantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/ImagemItemVacina"
                app:layout_constraintStart_toStartOf="@+id/labelNomeVacina"
                tools:text="Faltam 80 dias" />

            <ImageView
                android:id="@+id/ImagemItemVacina"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:paddingTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/icone_vacina_amarelo" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>