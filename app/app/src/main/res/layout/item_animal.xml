<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/itemAnimalNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/IconeTipoAnimal"
                app:layout_constraintTop_toTopOf="@+id/IconeTipoAnimal"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Nina" />

            <TextView
                android:id="@+id/itemAnimalGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femea"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/IconeTipoAnimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/itemAnimalNome"
                app:layout_constraintTop_toBottomOf="@+id/itemAnimalNome"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/IconeTipoAnimal"
                android:layout_width="95dp"
                android:layout_height="96dp"
                android:layout_margin="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/img_cachorro_emoji_foreground" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

